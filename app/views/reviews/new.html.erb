<div class="container">
  <h1 style="text-align: center">review <%= @restaurant.name %></h1>
    <div class="row">
      <%= simple_form_for [@restaurant, @review] do |r| %>
        <div class="col-xs-4 col-xs-offset-4">
          <%= r.input :content %>
          <%= r.input :rating, collection: [0,1,2,3,4,5] %>
          <%= r.submit "review", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
</div>

